<div id="<%= dom_id project %>" class="border-solid border-2">
  <p class="my-5 bt-2">
    <span class="block font-medium mb-1">Name:</span>
    <%= project.name %>
  </p>

  <p class="my-5">
    <span class="block font-medium mb-1">Stars count:</span>
    <%= project.stars_count %>
  </p>

  <p class="my-5">
    <span class="block font-medium mb-1">Url:</span>
    <%= link_to(project.url, project.url, target: "_blank", class: "text-sky-700") %>
  </p>

  <p class="my-5">
    <% project.jewels.each do |jewel| %>
      <span class="font-bold text-sky-700 visited:text-indigo-700 mr-1">
        <%= link_to(jewel.name, projects_path(search: jewel.name))%>
      </span>
    <% end %>
  </p>
  <p class="my-5">
    <%= link_to "Show this project", project %>
  </p>
</div>